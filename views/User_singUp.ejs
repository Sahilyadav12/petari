<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <!--<title>Registration Form in HTML CSS</title>-->
    <!---Custom CSS File--->
    <link rel="stylesheet" href="css/user_singup.css" />
<!-- fabicon -->
<link rel="shortcut icon" href="img/logo.png" type="image/x-icon">

  </head>
  <body>
    <section class="container">
      <header class="header"> User SingUp Form</header>
      <br>
      <hr>
      <form action="/user_singup" class="form" method="post">
        <div class="input-box">
          <label>Full Name</label>
          <input type="text"  name="fname" placeholder="Enter full name" required />
        </div>

        <div class="input-box">
          <label>Email Address</label>
          <input type="text"  name="email" placeholder="Enter email address" required />
        </div>

        <div class="column">
          <div class="input-box">
            <label>PickUp </label>
            <input type="time"  name="pickup" placeholder="Enter PickUp Time" required />
          </div>
          <div class="input-box">
            <label>Birth Date</label>
            <input type="date"  name="dob" placeholder="Enter  Birth Date" required />
          </div>
          
          <div class="input-box">
            <label>Food carry  Date </label>
            <input type="date"  name="carrydate" placeholder="Enter birth date" required />
          </div>
        </div>



        <div class="TypeFood">
            <h3>Type of Food</h3>
            <div class="Food-option">
              <div class="Type-option" >
                <input type="radio" id="check-food" name="foodType" checked  required/>
                <label for="check-male">Veg</label>
              </div>
            </div>
                <div class="Type-option">
                  <input type="radio" id="check-food" name="foodType" checked required />
                  <label for="check-male">Non-Veg</label>
                  <div class="Type-option">
                    <input type="radio" id="check-food" name="foodType" checked required />
                    <label for="check-male">Both</label>
                
              </div>
        </div>
              
        <div class="gender-box">
          <h3>Gender</h3>
          <div class="gender-option">
            <div class="gender">
              <input type="radio" id="check-male" name="gender" checked required/>
              <label for="check-male">Male</label>
            </div>
            <div class="gender">
              <input type="radio" id="check-female" name="gender" required value="Female"/>
              <label for="check-female">Female</label>
            </div>
            <div class="gender">
              <input type="radio" id="check-other" name="gender" required/>
              <label for="check-other">prefer not to say</label>
            </div>
          </div>
        </div>
        <div class="input-box">
          <label>Phone Number</label>
          <input type="number"  name="phn" placeholder="Enter phone number" required />
        </div>
        <div class="input-box address">
          <label>Address</label>
          <input type="text"  name="add1" placeholder="Enter  address" required />
          <input type="text"   name="add2" placeholder="Enter  address line 2" required />
          <div class="column">
            <div class="select-box">
              <select>
                <option hidden required name="Country"  >Country</option>
                <option  name="Country"  value="INDIA">INDIA</option>
                <option  name="Country" >UAE</option>
                <option  name="Country">UK</option>
                <option  name="Country">USA</option>
              </select>
            </div>
            <input type="text" name="city" placeholder="Enter your city" required />
          </div>
          <div class="column">
            <input type="text"  name="dist" placeholder="Enter your District" required />
            <input type="number"  name="pin" placeholder="Enter Pin Code" required />
        
          </div>
          <textarea  class=" select-box  column" name="FoodDeatils" id="" cols="90%" rows="10"
          name="aboutFood" placeholder="Give Some Details About  The Food" required></textarea>
        </div>
        <button type="submit" id="singup-btn"><a href="views/success.ejs"></a>Submit</button>
      </form>
    </section>
    <script src="js/index.js"></script>
  </body>
</html>

